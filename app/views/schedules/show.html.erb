<h2>スケジュール詳細</h2>

<table>
    <tr>
        <th>タイトル</th>
        <td><%= @schedule.title %></td>
    </tr>
    <tr>
        <th>開始日</th>
        <td><%= @schedule.start_date.to_s(:datetime_jp1) %></td>
    </tr>
    <tr>
        <th>終了日</th>
        <td><%= @schedule.end_date.to_s(:datetime_jp1) %></td>
    </tr>
    <tr>
        <th>終日</th>
        <td><%= @schedule.all_day %></td>
    </tr>
    <tr>
        <th>スケジュールメモ</th>
        <td><%= @schedule.introduction %></td>
    </tr>
</table>

<div>
    <ul>
        <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
    </ul>
    <ul>
        <li><%= link_to "スケジュールを編集する", :edit_schedule %></li>
    </ul>
    <ul>
        <li><%= link_to "スケジュールを削除する", @schedule, method: :delete, data: {confirm:"本当に削除しますか？"} %></li>
    </ul>
</div>